<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemAnhNhaHang">
<!--<ScrollView-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="match_parent">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm mới hình ảnh nhà hàng"
            android:textSize="12pt"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textColor="#FE003E"/>

        <ImageView
            android:id="@+id/ivChonAnh"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnChonAnh"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn ảnh"
            android:textStyle="bold|italic"
            android:backgroundTint="#00FEF2"
            android:textSize="9pt"/>

        <Button
            android:id="@+id/btnThemAnh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm ảnh nhà hàng"
            android:textStyle="bold|italic"
            android:backgroundTint="#08FE00"
            android:textSize="9pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Các hình ảnh nhà hàng"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="10pt"/>

        </LinearLayout>

        <ListView
            android:id="@+id/lvCacAnhNhaHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnTroLai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trở lại"
            android:backgroundTint="#002DFE"
            android:textStyle="bold|italic"
            android:textSize="9pt"/>
    </LinearLayout>
<!--</ScrollView>-->
</androidx.constraintlayout.widget.ConstraintLayout>